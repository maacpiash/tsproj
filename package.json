{
  "name": "tsproj",
  "version": "1.0.0",
  "description": "Template for TypeScript projects",
  "author": "Ahad Chowdhury <ahadc@maacpiash.com> (https://www.maacpiash.com)",
  "repository": "github:maacpiash/tsproj",
  "keywords": [
    "typescript",
    "template"
  ],
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "coverage": "opener ./coverage/lcov-report/index.html",
    "dev": "nodemon",
    "format": "prettier --write \"./**/*.ts\"",
    "lint": "eslint **/*.ts --fix",
    "start": "node dist/index.js",
    "test": "jest"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true
  },
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.5",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "jest": "^26.0.1",
    "nodemon": "^2.0.3",
    "opener": "^1.5.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^25.5.0",
    "ts-node": "^8.10.1",
    "tslib": "^1.11.2",
    "typescript": "^3.8.3"
  }
}
